{
  "name": "graphql-backend",
  "version": "0.0.1",
  "description": "A template for initialising GraphQL backend services",
  "main": "lib/index.js",
  "scripts": {
    "cleanup": "git clean -xf && yarn",
    "postinstall": "yarn tsc -b",
    "start": "node lib/index.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pranjalnadhani/graphql-backend.git"
  },
  "keywords": [
    "graphql",
    "typescript",
    "service",
    "backend"
  ],
  "author": "Pranjal Nadhani",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pranjalnadhani/graphql-backend/issues"
  },
  "homepage": "https://github.com/pranjalnadhani/graphql-backend#readme",
  "devDependencies": {
    "@types/chai": "4.3.4",
    "@types/jest": "27.4.1",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "chai": "4.3.7",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jest": "26.8.7",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-standard": "5.0.0",
    "husky": "9.1.4",
    "jest": "25.5.4",
    "lint-staged": ">=12",
    "prettier": "2.5.1",
    "ts-jest": "25.5.1",
    "typescript": "3.9.10",
    "validate-commit-msg": "2.14.0"
  },
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "validate-commit-msg"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,md,json}": "prettier --write"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "src"
  },
  "engines": {
    "node": "14.17.5",
    "npm": "7.20.6",
    "yarn": "1.22.17"
  }
}
